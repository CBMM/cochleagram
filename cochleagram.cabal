category:            Web
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     WebAudio
                       Arithmetic
                       Cochlea
                       Types
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.10,
                       -- arb-fft,
                       containers,
                       data-default,
                       text,
                       -- ghcjs-base >= 0.2 && < 0.3,
                       ghcjs-dom >= 0.8 && < 0.9,
                       parsec,
                       pretty,
                       reflex,
                       reflex-dom,
                       reflex-dom-contrib,
                       time,
                       transformers
  if impl(ghcjs)
    build-depends: ghcjs-base
  if !impl(ghcjs)
    build-depends: jsaddle
  hs-source-dirs:      src
  default-language:    Haskell2010

executable cochleagram
  main-is: Main.hs
  hs-source-dirs: exec
  default-language: Haskell2010
  build-depends:    base,
                    -- arb-fft,
                    containers,
                    cochleagram,
                    data-default,
                    -- ghcjs-base,
                    ghcjs-dom,
                    pretty,
                    reflex,
                    reflex-dom,
                    reflex-dom-contrib,
                    text,
                    time,
                    transformers
  if impl(ghcjs)
     build-depends: ghcjs-base
  if !impl(ghcjs)
     build-depends: jsaddle
